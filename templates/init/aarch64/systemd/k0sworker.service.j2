[Unit]
Description               = k0s - Zero Friction Kubernetes
Documentation             = https://docs.k0sproject.io
# ConditionFileIsExecutable = /usr/local/bin/k0s/{{ k0s_version }}/k0s

After                     = network-online.target
Wants                     = network-online.target

[Service]
StartLimitInterval        = 5
StartLimitBurst           = 10
ExecStart                 = /usr/local/bin/k0s/{{ k0s_version }}/k0s worker --token-file=/etc/k0s/worker-token --verbose=true

RestartSec                = 120
Delegate                  = yes
KillMode                  = process
LimitCORE                 = infinity
TasksMax                  = infinity
TimeoutStartSec           = 0
LimitNOFILE               = 999999
Restart                   = always

[Install]
WantedBy                  = multi-user.target
